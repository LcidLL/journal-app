<div class="page-header">
  <h1>My Dashboard</h1>
</div>

<div class="btn-group">
  <%= link_to "View My Journal", categories_path, class: "btn btn-primary" %>
  <%= link_to "View My Tasks", tasks_path, class: "btn btn-primary" %>
</div>

<% if @today_priority_tasks.any? %>
  <div class="section">
    <h2>Today's Priority Tasks</h2>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Task</th>
            <th>Category</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @today_priority_tasks.each do |task| %>
            <tr class="due-today-row">
              <td><%= link_to task.task_name, [task.category, task] %></td>
              <td><%= task.category.category_name %></td>
              <td><%= truncate(task.description, length: 50) if task.description.present? %></td>
              <td class="table-actions">
                <%= link_to "View", [task.category, task], class: "btn btn-sm" %>
                <%= link_to "Start", edit_category_task_path(task.category, task), class: "btn btn-sm btn-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>

<% if @overdue_tasks.any? %>
  <div class="section">
    <h2>Overdue Tasks</h2>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Task</th>
            <th>Category</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @overdue_tasks.each do |task| %>
            <tr class="overdue-row">
              <td><%= link_to task.task_name, [task.category, task] %></td>
              <td><%= task.category.category_name %></td>
              <td><%= task.due_date.strftime("%B %d, %Y") %></td>
              <td><span class="badge badge-danger"><%= task.status.humanize %></span></td>
              <td class="table-actions">
                <%= link_to "Edit", edit_category_task_path(task.category, task), class: "btn btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>

<% if @due_today_tasks.any? %>
  <div class="section">
    <h2>Due Today</h2>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Task</th>
            <th>Category</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @due_today_tasks.each do |task| %>
            <tr class="due-today-row">
              <td><%= link_to task.task_name, [task.category, task] %></td>
              <td><%= task.category.category_name %></td>
              <td>
                <% if task.status == 'priority' %>
                  <span class="badge badge-info"><%= task.status.humanize %></span>
                <% else %>
                  <span class="badge badge-warning"><%= task.status.humanize %></span>
                <% end %>
              </td>
              <td class="table-actions">
                <%= link_to "View", [task.category, task], class: "btn btn-sm" %>
                <%= link_to "Edit", edit_category_task_path(task.category, task), class: "btn btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>