<h1>Add New Book</h1>

<div class="form-container">
  <%= form_with model: @book do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
      <% @book.errors.full_messages_for(:title).each do |message| %>
        <div class="error-message"><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :author %>
      <%= form.text_field :author, class: "form-control" %>
      <% @book.errors.full_messages_for(:author).each do |message| %>
        <div class="error-message"><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :publish_date %>
      <%= form.date_field :publish_date, class: "form-control" %>
      <% @book.errors.full_messages_for(:publish_date).each do |message| %>
        <div class="error-message"><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :summary %>
      <%= form.text_area :summary, rows: 4, class: "form-control" %>
      <% @book.errors.full_messages_for(:summary).each do |message| %>
        <div class="error-message"><%= message %></div>
      <% end %>
    </div>

    <div class="form-actions">
      <%= form.submit "Create Book", class: "btn btn-primary" %>
      <%= link_to "Cancel", books_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>