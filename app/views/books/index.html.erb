<div class="books-container">
  <div class="page-header">
    <h1>ðŸ“š My Library</h1>
    <div class="header-actions">
      <%= link_to "Dashboard", root_path, class: "btn btn-secondary" %>
      <%= link_to "Add New Book", new_book_path, class: "btn btn-success" %>
    </div>
  </div>

  <div class="books-grid">
    <% if @books.any? %>
      <% @books.each do |book| %>
        <div class="book-card">
          <div class="book-info">
            <h3><%= link_to book.title, book %></h3>
            <p class="author">by <%= book.author %></p>
            <% if book.publish_date.present? %>
              <p class="publish-date"><%= book.publish_date.strftime("%Y") %></p>
            <% end %>
          </div>

          <div class="book-progress">
            <div class="progress-info">
              <span class="task-count"><%= book.tasks.count %> notes</span>
            </div>
            <div class="progress-bar">
              <div class="progress-fill" style="width: <%= book.reading_progress %>%"></div>
            </div>
          </div>

          <div class="book-actions">
            <%= link_to "View", book, class: "btn btn-primary btn-sm" %>
            <%= link_to "Edit", edit_book_path(book), class: "btn btn-primary btn-sm" %>
          </div>

          <div class="book-summary">
            <% if book.summary.present? %>
              <p><%= truncate(book.summary, length: 80) %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="empty-state">
        <h3>No books in your library yet!</h3>
        <p>Start building your reading collection.</p>
      </div>
    <% end %>
  </div>
</div>