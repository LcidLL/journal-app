<div class="page-header">
  <h1>My Journal</h1>
  <div class="page-actions">
    <%= link_to "Add category", new_category_path, class: "btn btn-primary" %>
    <%= link_to "View all tasks", tasks_path, class: "btn btn-primary" %>
  </div>
</div>

<% if @categories.any? %>
  <div class="table-container">
    <table>
      <thead>
        <tr>
          <th>Category Name</th>
          <th>Description</th>
          <th>Tasks</th>
          <th>Progress</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= link_to category.category_name, category %></td>
            <td><%= truncate(category.description, length: 50) if category.description.present? %></td>
            <td><%= category.tasks.count %></td>
            <td><%= category.task_progress %>%</td>
            <td class="table-actions">
              <%= link_to "View", category, class: "btn btn-sm" %>
              <%= link_to "Edit", edit_category_path(category), class: "btn btn-sm" %>
              <%= link_to "Delete", category, 
                data: { 
                  turbo_method: :delete, 
                  turbo_confirm: "Are you sure?" 
                }, 
                class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="empty-state">
    <h3>No categories yet</h3>
  </div>
<% end %>