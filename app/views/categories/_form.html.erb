<div class="form-container">
  <%= form_with model: @category, local: true do |form| %>
    <% if @category.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h4>
        <ul>
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :category_name, class: "form-label" %>
      <span class="required">*</span>
      <%= form.text_field :category_name, class: "form-control #{'is-invalid' if @category.errors[:category_name].any?}", 
                         placeholder: "Enter category name", maxlength: 255 %>
      <% if @category.errors[:category_name].any? %>
        <div class="invalid-feedback">
          <%= @category.errors[:category_name].first %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, rows: 4, class: "form-control #{'is-invalid' if @category.errors[:description].any?}", 
                        placeholder: "Enter category description (optional)", maxlength: 2000 %>
      <% if @category.errors[:description].any? %>
        <div class="invalid-feedback">
          <%= @category.errors[:description].first %>
        </div>
      <% end %>
      <small class="form-text text-muted">Optional - Maximum 2000 characters</small>
    </div>

    <div class="form-actions">
      <%= form.submit (@category.new_record? ? "Create Category" : "Update Category"), class: "btn btn-primary" %>
      <%= link_to "Cancel", (@category.new_record? ? categories_path : @category), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
