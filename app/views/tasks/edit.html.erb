<div class="page-header">
  <h1>Edit Task</h1>
  <h2>for "<%= @category.category_name %>"</h2>
</div>

<div class="form-container">
  <%= form_with model: [@category, @task], local: true do |form| %>
    <% if @task.errors.any? %>
      <div class="error-messages">
        <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
        <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :task_name, class: "form-label" %>
      <%= form.text_field :task_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, rows: 4, class: "form-control" %>
      <div class="form-text">Optional - Additional details about this task</div>
    </div>

    <div class="form-group">
      <%= form.label :due_date, class: "form-label" %>
      <%= form.date_field :due_date, class: "form-control" %>
      <div class="form-text">Optional - When should this task be completed?</div>
    </div>

    <div class="form-group">
      <%= form.label :status, class: "form-label" %>
      <%= form.select :status, options_for_select(Task::STATUSES.map { |status| [status.humanize, status] }, @task.status), { prompt: "Select status" }, { class: "form-control" } %>
    </div>

    <div class="form-actions">
      <%= form.submit "Update Task", class: "btn btn-primary" %>
      <%= link_to "View Task", [@category, @task], class: "btn btn-secondary" %>
      <%= link_to "Cancel", @category, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>