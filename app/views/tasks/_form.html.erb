<div class="form-container">
  <%= form_with model: [@book, @task], local: true do |form| %>
    <% if @task.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h4>
        <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :reading_status, class: "form-label" %>
      <span class="required">*</span>
      <%= form.select :reading_status, 
          options_for_select(Task::READING_STATUSES.map { |status| [status.humanize, status] }, @task.reading_status), 
          { prompt: "Select reading status" }, 
          { class: "form-control #{'is-invalid' if @task.errors[:reading_status].any?}" } %>
      <% if @task.errors[:reading_status].any? %>
        <div class="invalid-feedback">
          <%= @task.errors[:reading_status].first %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :target_date, class: "form-label" %>
      <%= form.date_field :target_date, class: "form-control #{'is-invalid' if @task.errors[:target_date].any?}", 
                         min: Date.current %>
      <% if @task.errors[:target_date].any? %>
        <div class="invalid-feedback">
          <%= @task.errors[:target_date].first %>
        </div>
      <% end %>
      <small class="form-text text-muted">Optional - Set a target date for this reading task</small>
    </div>

    <div class="form-group">
      <%= form.label :chapter_summary, "Notes/Summary", class: "form-label" %>
      <%= form.text_area :chapter_summary, rows: 4, 
          class: "form-control #{'is-invalid' if @task.errors[:chapter_summary].any?}", 
          placeholder: "Add notes about this reading task...", maxlength: 2000 %>
      <% if @task.errors[:chapter_summary].any? %>
        <div class="invalid-feedback">
          <%= @task.errors[:chapter_summary].first %>
        </div>
      <% end %>
      <small class="form-text text-muted">Optional - Maximum 2000 characters</small>
    </div>

    <div class="form-actions">
      <%= form.submit (@task.new_record? ? "Create Task" : "Update Task"), class: "btn btn-primary" %>
      <%= link_to "Cancel", @book, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>