<div class="form-container">
  <%= form_with model: [@category, @task], local: true do |form| %>
    <% if @task.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h4>
        <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :task_name, class: "form-label" %>
      <span class="required">*</span>
      <%= form.text_field :task_name, class: "form-control #{'is-invalid' if @task.errors[:task_name].any?}", 
                         placeholder: "Enter task name", maxlength: 255 %>
      <% if @task.errors[:task_name].any? %>
        <div class="invalid-feedback">
          <%= @task.errors[:task_name].first %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, rows: 4, class: "form-control #{'is-invalid' if @task.errors[:description].any?}", 
                        placeholder: "Enter task description (optional)", maxlength: 2000 %>
      <% if @task.errors[:description].any? %>
        <div class="invalid-feedback">
          <%= @task.errors[:description].first %>
        </div>
      <% end %>
      <small class="form-text text-muted">Optional - Maximum 2000 characters</small>
    </div>

    <div class="form-group">
      <%= form.label :due_date, class: "form-label" %>
      <%= form.date_field :due_date, class: "form-control #{'is-invalid' if @task.errors[:due_date].any?}", 
                         min: Date.current %>
      <% if @task.errors[:due_date].any? %>
        <div class="invalid-feedback">
          <%= @task.errors[:due_date].first %>
        </div>
      <% end %>
      <small class="form-text text-muted">Optional - When should this task be completed?</small>
    </div>

    <div class="form-group">
      <%= form.label :status, class: "form-label" %>
      <span class="required">*</span>
      <%= form.select :status, 
          options_for_select(Task::STATUSES.map { |status| [status.humanize, status] }, @task.status), 
          { prompt: "Select task status" }, 
          { class: "form-control #{'is-invalid' if @task.errors[:status].any?}" } %>
      <% if @task.errors[:status].any? %>
        <div class="invalid-feedback">
          <%= @task.errors[:status].first %>
        </div>
      <% end %>
    </div>

    <div class="form-actions">
      <%= form.submit (@task.new_record? ? "Create Task" : "Update Task"), class: "btn btn-primary" %>
      <%= link_to "Cancel", @category, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>